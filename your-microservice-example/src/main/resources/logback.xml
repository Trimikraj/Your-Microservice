<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>
    <!-- Wire Debugging -->
    <logger name="org.apache.http" level="ERROR"/>
    <logger name="org.apache.http.wire" level="ERROR"/>
    <!-- Stormpath Debugging -->
    <logger name="com.stormpath" level="WARN"/>
    <!-- Spring Debugging -->
    <logger name="org.thymeleaf" level="ERROR"/>
    <logger name="org.springframework.security" level="ERROR"/>
    <logger name="org.springframework.web" level="ERROR"/>
    <logger name="org.springframework.boot.actuate.endpoint.mvc.EndpointHandlerMapping" level="WARN"/>
    <logger name="org.springframework.test.web.servlet.TestDispatcherServlet " level="WARN"/>
    <logger name="org.springframework.security.web.context.HttpSessionSecurityContextRepository"
            level="ERROR"/>
    <logger name="org.springframework.security.web.context.HttpSessionSecurityContextRepository$SaveToSessionResponseWrapper"
            level="ERROR" />
    <logger name="org.springframework.boot.context.web" level="ERROR" />
    <!-- Your Microservice -->
    <logger name="your.microservice" level="DEBUG" />
</configuration>